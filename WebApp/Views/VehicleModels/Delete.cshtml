@model WebApp.ViewModels.VehicleModelViewModel

@{
    ViewData["Title"] = "Delete Vehicle Model";
}

<h2>Delete Vehicle Model</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vehicle Model Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Make ID:</dt>
        <dd class="col-sm-10">@Model.MakeId</dd>

        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Abbreviation:</dt>
        <dd class="col-sm-10">@Model.Abrv</dd>
    </dl>

    <form asp-action="Delete" asp-controller="VehicleModels" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "VehicleModels", new { makeId = ViewBag.MakeId })" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
