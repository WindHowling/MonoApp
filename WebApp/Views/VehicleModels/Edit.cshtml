@model WebApp.ViewModels.VehicleModelViewModel

@{
    ViewData["Title"] = "Edit Vehicle Model";
}

<h2>Edit Vehicle Model</h2>

<form asp-action="Edit" asp-controller="VehicleModels" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label number="MakeId" class="control-label">MakeId</label>
        <input type="number" name="MakeId" id="MakeId" class="form-control" value="@Model.MakeId" required />
        <span asp-validation-for="MakeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label name="Name" class="control-label">Name</label>
        <input name="Name" class="form-control" value="@Model.Name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label name="Abrv" class="control-label">Abrv</label>
        <input name="Abrv" class="form-control" value="@Model.Abrv" required />
        <span asp-validation-for="Abrv" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index", "VehicleModels", new { makeId = ViewBag.MakeId })" class="btn btn-secondary">Cancel</a>
</form>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
