@model Project.MVC.ViewModels.VehicleModelViewModel

@{
    ViewData["Title"] = "Edit Vehicle Model";
}

<h2>Edit Vehicle Model</h2>

<form asp-action="Edit" asp-controller="VehicleModels" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="MakeId" class="control-label"></label>
        <select asp-for="MakeId" class="form-control" asp-items="@(new SelectList(ViewBag.VehicleMakes, "Id", "Id"))">
            <option value="">-- Odaberi MakeId --</option>
        </select>
        <span asp-validation-for="MakeId" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Abrv" class="control-label"></label>
        <input asp-for="Abrv" class="form-control" />
        <span asp-validation-for="Abrv" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index", "VehicleModels", new { makeId = ViewBag.MakeId })" class="btn btn-secondary">Cancel</a>
</form>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">